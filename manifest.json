{
    "manifest_version": 2,
    "name": "Reddit Container",
    "version": "1",

    "description": "Reddit Container isolates your Reddit activity from the rest of your web activity in order to prevent Reddit from tracking you outside of the Reddit website via third party cookies.",

    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },

    "applications": {
      "gecko": {
        "id": "@contain-reddit",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "none",

    "permissions": [
        "<all_urls>",
        "contextualIdentities",
        "cookies",
        "management",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
